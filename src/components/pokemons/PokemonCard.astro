---
interface Props {
  name: string;
  url: string;
  isBig?: boolean;
}

const { name, url, isBig = false } = Astro.props;

const id = url.split("/").at(-2);
const imgSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
---

<a
  href={`/pokemons/${name}`}
  class:list={[
    "rounded-lg flex flex-col justify-center items-center p-2",
    { border: !isBig },
  ]}
>
  <img
    transition:name={`${name}-image`}
    src={imgSrc}
    alt={`Pokemon ${name}`}
    class:list={[
      {
        "w-72 h-72": isBig,
        "w-24 h-24": !isBig,
      },
    ]}
  />
  <span
    class:list={[
      "capitalize bg-slate-700 px-3 py-1 rounded-lg",
      {
        "text-4xl font-bold": isBig,
      },
    ]}>#{id} {name}</span
  >
</a>
